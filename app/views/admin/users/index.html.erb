<%= render "admin/shared/header" %>

<div class="container">
 
     
    <h1 class="font-weight-bold">ユーザー一覧</h1>
    
    
    <div class="d-flex justify-content-sm-center">
        
        
     <table class='table table-hover table-inverse mt-5'>
      <thead>
        <tr>
          <th>ID</th>
          <th>ユーザー</th>
          <th>投稿数</th>
          <th>コメントした数</th>
        </tr>
      </thead>
      <tbody>
          
        <% @users.each do |user| %>
         <tr>
          <td>
           <%= user.id %>
          </td>
          <td>
            <%= link_to admin_user_path(user.id) do %>
                <%= image_tag user.get_profile_image(100,100), class: "img-thumbnail" %>
                <%= user.name %>
            <% end %>
          </td>
          <td>
            <%= user.posts.count %>
          </td>
          <td><i class="fa-regular fa-comment-dots"></i><%= "#{user.post_comments.count}" %></td>
         </tr>
        <% end %>
      </tbody>
     </table>
        
    </div>

 
<%= paginate @users %>
</div>