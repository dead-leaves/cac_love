<%= render "admin/shared/header" %>

<div class="container">
  
   <div class="row">
     <h1 class="fw-bold">投稿詳細</h1>
   
     <div class="col-md-6 mb-3">
      <%= image_tag @post.get_image(450, 450) %>
     </div>
   
     <div class="col-md-6">
       <div class="card">
         <div class="card-header">
           <%= l @post.created_at %>
  
           <%= link_to admin_user_path(@post.user.id) do %>
            <%= image_tag @post.user.get_profile_image(50, 50), class: "rounded-circle"; %>
            <%= @post.user.name %>
           <% end %>
         </div>
         
         <div class="card-body">
           <h5 class="card-title fw-bold"><%= @post.title %></h5>
           <p class="card-text"><%= @post.body %></p>
         </div>
         
         <div class="card-footer">
            <%= link_to post_path(@post), class: "btn btn-outline-danger", method: :delete, "data-confirm" => "本当に削除しますか?" do %>
              削除
            <% end %>
         </div>
       </div>
     </div>
    </div>
  
  
    <div class="row mt-3 mb-5">
      <div class="col-lg-2">
        <i class="fa-regular fa-comment-dots"></i><%= @post.post_comments.count %>コメント
      </div>
    </div>
      
   
    <div class="row">
      <div class="col-lg-8">
        <div>
         <button class="btn btn-primary mb-2" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample"
         aria-expanded="false" aria-controls="collapseExample">コメント一覧を見る▼</button>
        </div>
  
        <div class="collapse" id="collapseExample">
          <div class="card card-body">
            <% @post.post_comments.each do |post_comment| %>
              <%= l post_comment.created_at %>
            
              <%= link_to admin_user_path(post_comment.user) do %>
                <%= post_comment.user.name %>さんからのコメント<br>
              <% end %>
            
            <div class="mt-4">
              <div class="border-bottom border-success">
                <%= post_comment.comment %>
                
                <%= link_to post_post_comment_path(post_comment.post, post_comment), class: "btn btn-outline-danger", method: :delete, "data-confirm" => "本当に削除しますか?" do %>
                  削除
                <% end %>
              </div>
            </div>
            <% end %>
          </div>
        </div>
        
      </div>
    </div>
</div>