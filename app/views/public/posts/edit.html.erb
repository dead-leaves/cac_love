<%= render "public/shared/header" %>
<h1>編集</h1>

<%= form_with model: @post, url: post_path(@post), method: :patch do |f| %>


<div class=field>
  <label for=post_title>タイトル</label>
  <%= f.text_field :title %>
</div>

<div class=field>
  <label for=post_image>画像</label>
  <%= f.file_field :image, accept: "image/*" %>
</div>

<div class=field>
  <label fot=post_body>本文</label>
  <%= f.text_area :body %>
</div>


<div class='form-group'>
  <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :tag_name) do |tag| %>
    <div class='form-check'>
      <%= tag.label class: 'form-check-label' do %>
          <%= tag.check_box class: 'form-check-input' %>
          <%= tag.text %>
      <% end %>
    </div>
  <% end %>
</div>


<div class=actions>
  <%= f.submit "編集" %>
</div>

<% end %>

