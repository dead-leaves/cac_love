<%= render "public/shared/header" %>

<div class="container-fluid">
 <div class="row">
   <h1 class="fw-bold">投稿詳細</h1>
   
   <div class="col-lg-6">
    <%= image_tag @post.get_image(300, 300) %>
   </div>
   
   <div class="col-lg-6">
     <p>タイトル：<%= @post.title %></p>
      <% @post.tags.each do |tag| %>
        <%= tag.tag_name %>
      <% end %>
   </div>
    
    
    
    
    
    

<div>
  
  

 

  <p>本文：<%= @post.body %></p>


  <% if @post.user == current_user %>
  <%= link_to "編集", edit_post_path(@post) %>|<%= link_to "削除", post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか?" %>
  <% end %>

  <p>投稿ユーザー画像：<%= link_to user_path(@post.user.id) do %>
                        <%= image_tag @post.user.get_profile_image(100, 100) %></p>
                       <% end %>
  <p>ユーザーネーム：<%= @post.user.name %></p>
  <p>投稿日：<%= l @post.created_at %></p>
  
  
  
  
 <% if user_signed_in? %> 
    <% if @post.favorited_by?(current_user) %>
      <p>
        <%= link_to post_favorites_path(@post), method: :delete do %>
          <i class="fa-solid fa-heart" style="color: red;"></i><%= @post.favorites.count %> いいね
        <% end %>
      </p>
      <% else %>
      <p>
        <%= link_to post_favorites_path(@post), method: :post do %>
          <i class="fa-regular fa-heart" style="color: red;" ></i><%= @post.favorites.count %> いいね
        <% end %>
      </p>
    <% end %>
  <% end %>
</div>



<div>
  
  <p>コメント件数：<%= @post.post_comments.count %></p>
  
  <% @post.post_comments.each do |post_comment| %>
    <p><%= image_tag post_comment.user.get_profile_image(100,100) %></p>
    <%= post_comment.user.name %>
    <%= l post_comment.created_at %><%= post_comment.comment %>
    
    <% if post_comment.user == current_user %>
      <%= link_to "削除",  post_post_comment_path(post_comment.post, post_comment), method: :delete %>
    <% end %>
    
  <% end %>
</div>

<% if user_signed_in? %>
<div>
  <%= form_with model: [@post, @post_comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
<% end %>
</div>
