        </li>

      </ul>

        <div class="d-flex">
            <%= render "public/shared/search_form" %>
        </div>


        <% else %>


       <ul class="navbar-nav me-auto mb-2 mb-lg-0">

        <li class="nav-item">
          <%= link_to posts_path, class: "nav-link" do %>
          <i class="fa-solid fa-seedling fa-2x"></i> みんなの投稿一覧
          <% end %>
        </li>

        <li class="nav-item">
          <%= link_to new_user_registration_path, class: "nav-link" do %>
