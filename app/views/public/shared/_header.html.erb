        </li>

        <li class="nav-item">
          <%= link_to new_user_session_path, class: "nav-link" do %>
          <i class="fa-solid fa-right-to-bracket fa-2x"></i> ログイン
          <% end %>
        </li>

        <li class="nav-item">
          <%= link_to  public_guest_sign_in_path, class: "nav-link", method: :post do %>
          <i class="fa-solid fa-clipboard-user fa-2x"></i> ゲストログイン
