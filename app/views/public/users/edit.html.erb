<%= render "public/shared/header" %>


<h2>プロフィール編集</h2>

<%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>

  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "名前"%>
  
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  
  <div class="form-group">
    <label for="user_introduction">Introduction</label>
          <%= f.text_area :introduction, class: "form-control introduction" %>
  </div>
  
  <%= f.submit "変更を保存" %>
  
<% end %>

<%= link_to "退会する", withdraw_user_path(@user) %>