    <table class='table table-hover table-inverse mt-5'>
      <thead>
        <tr>
          <th></th>
          <th>ユーザー名</th>
          <th>投稿数</th>
          <th>いいね&コメント</th>
        </tr>
      </thead>
      <tbody>
          
        <% users.each do |user| %>
         <tr>
          <td>
            <%= link_to user_path(user) do %>
                <%= image_tag user.get_profile_image(100, 100), class: "img-thumbnail" %><br>
            <% end %>
          </td>
          <td>
            <div class="fw-normal"><%= user.name %></div>
          </td>
          <td><%= user.posts.count %></td>
          <td>
            <i class="fa-regular fa-heart" style="color: red;" ></i><%= user.favorites.count %>
            
            <%= link_to post_path(user.posts.ids) do %>
              <i class="fa-regular fa-comment-dots"></i><%= "#{user.post_comments.count}" %>
            <% end %>
          </td>
         </tr>
        <% end %>
      </tbody>
    </table>
