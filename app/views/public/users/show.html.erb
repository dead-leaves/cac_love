<%= render "public/shared/header" %>

<div class="container-fluid">
 <div class="row">
    
    <div class="col-md-3">
     <div class="bg-success p-1 text-dark bg-opacity-25">
         
         <%= render "public/shared/user_show", user: @user %>
          
     </div>
    </div>
    
    

    <div class="col-md-9">
        <% if @user == current_user %>
            <h1 class="fw-bold">My投稿一覧</h1>
        <% else %>
            <h1 class="fw-bold"><%= @user.name %>さんの投稿一覧</h1>
        <% end %>
        
     <table class='table table-hover table-inverse mt-5'>
      <thead>
        <tr>
          <th></th>
          <th>タイトル</th>
          <th>タグ</th>
          <th>いいね&コメント</th>
          <th>投稿日</th>
        </tr>
      </thead>
      <tbody>
          
        <% @posts.each do |post| %>
         <tr>
          <td>
            <%= link_to post_path(post) do %>
                <%= image_tag post.get_image(100, 100), class: "img-thumbnail" %><br>
            <% end %>
          </td>
          <td><%= post.title %></td>
          <td>
            <% post.tags.each do |tag| %>
                <div class="badge rounded-pill bg-success"><%= tag.tag_name %></div>
            <% end %>
          </td>
          <td>
            <i class="fa-regular fa-heart" style="color: red;" ></i><%= post.favorites.count %>
            <%= link_to post_path(post.id) do %>
            <i class="fa-regular fa-comment-dots"></i><%= "#{post.post_comments.count}" %>
            <% end %>
          </td>
          <td><%= l post.created_at %></td>
         </tr>
        <% end %>
      </tbody>
    </table>
        
    </div>

 </div>
<%= paginate @posts %>
</div>

