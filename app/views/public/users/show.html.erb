<%= render "public/shared/header" %>

<h1>ユーザー詳細</h1>

<div>
  <%= image_tag @user.get_profile_image(200,200) %>
  <h3><%= @user.name %></h3>
  <p><%= @user.introduction %></p>
</div>

<% if @user == current_user %>
  <%= link_to "編集", edit_user_path(@user) %>
  <%
<% end %>



<h4>ユーザーの投稿一覧</h4>
<% @posts.each do |post| %>

<div>
  <%= image_tag post.get_image(100,100) %>
  <%= l post.created_at %>
  <p>タイトル：<%= post.title %></p>
  <p>本文<%= post.body %></p>
  <p>いいね</p>
  <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
</div>
<% end %>
