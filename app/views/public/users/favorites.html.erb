<%= render "public/shared/header" %>

<h1>ユーザー詳細</h1>

<div>
  <%= image_tag @user.get_profile_image(200,200) %>
  <h3><%= @user.name %></h3>
  <p><%= @user.introduction %></p>
</div>

<h3>お気に入り投稿</h3>
<% @favorite_posts.each do |post| %>

 <%= link_to post_path(post) do %>
    <%= image_tag post.get_image(100,100) %>
 <% end %>
    <%= post.title %>
<% end %>
